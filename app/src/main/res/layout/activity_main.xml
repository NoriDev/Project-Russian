<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="nori.m1nthing2322.lang.learn_russian.activity.main.MainActivity">

    <Button
        android:id="@+id/bt_alphabet"
        style="@style/Widget.CardContent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/section_alphabet"
        android:textSize="20sp"
        android:background="#ffffff" />

    <Button
        android:id="@+id/bt_keyboard"
        style="@style/Widget.CardContent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/section_keyboard"
        android:textSize="20sp"
        android:background="#ffffff"
        android:layout_below="@+id/bt_alphabet" />

</RelativeLayout>
